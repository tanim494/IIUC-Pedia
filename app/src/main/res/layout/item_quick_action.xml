<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quickActionCard"

    android:layout_width="100dp"
    android:layout_height="90dp"

    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp" app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        android:padding="8dp">

        <ImageView
            android:id="@+id/actionIcon"
            android:layout_width="32dp" android:layout_height="32dp"
            app:tint="@color/Green"
            android:layout_marginBottom="2dp" android:contentDescription="Quick Action Icon" />

        <TextView
            android:id="@+id/actionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action Name"
            android:textSize="12sp" android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:maxLines="2"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>